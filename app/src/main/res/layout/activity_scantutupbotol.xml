<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/main"
    tools:context=".scantutupbotol">

    <Button
        android:id="@+id/back"
        android:layout_width="22dp"
        android:layout_height="17dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="36dp"
        android:onClick="panahkembalikelayer5"
        android:background="@drawable/ic_arrow"
        tools:ignore="OnClick" />

    <TextView
        android:id="@+id/tutupbotol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@+id/back"
        android:layout_toRightOf="@id/back"
        android:fontFamily="@font/montserratsemibold"
        android:text="Scan Tutup Botol"
        android:textColor="@color/semi_black"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tutupbotol"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="146dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="145dp"
        app:srcCompat="@drawable/pp_dummy" />

    <TextView
        android:id="@+id/texttotaltutupbotol"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profil"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:textAlignment="center"
        android:fontFamily="@font/montserrat_medium"
        android:text="Total Tutup  Botol"
        android:textColor="@color/black_scan"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/texttotaltutupbotol"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="63dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="145dp"
        android:fontFamily="@font/montserrat_extrabold"
        android:text="Olivia Gabrielle"
        android:textAlignment="textEnd"
        android:textColor="@color/black_scan"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/total_tutup_botol"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/texttotaltutupbotol"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="271dp"
        android:layout_marginLeft="-36dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="81dp"
        android:layout_toRightOf="@+id/name"
        android:fontFamily="@font/montserratsemibold"
        android:text="0"
        android:textColor="@color/blue"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/setiap"
        android:layout_width="341dp"
        android:layout_height="80dp"
        android:layout_below="@id/name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        android:fontFamily="@font/montserratlight"
        android:gravity="center"
        android:text="@string/setiap_kali"
        android:textColor="@color/black"
        android:textSize="13dp" />

    <Button
        android:id="@+id/btn_scan"
        android:layout_width="223dp"
        android:layout_height="201dp"
        android:layout_above="@+id/btn_submit"
        android:layout_below="@+id/setiap"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="92dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="127dp"
        android:background="@drawable/scanfoto" />


    <ImageView
        android:id="@+id/alert_ijo"
        android:layout_width="238dp"
        android:layout_height="53dp"
        android:layout_above="@+id/btn_submit"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/alert_ijo" />

    <ImageView
        android:id="@+id/alert_merah"
        android:layout_width="238dp"
        android:layout_height="53dp"
        android:layout_above="@+id/btn_submit"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/alert_merah" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_above="@+id/btncancel"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_login_register"
        android:text="Submit"
        android:onClick="submit"
        android:enabled="false"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btncancel"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"
        android:background="@drawable/rectanglegils"
        android:onClick="cancel"
        android:text="Cancel"
        android:textColor="@color/black_scan" />
</RelativeLayout>
